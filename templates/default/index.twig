{% set bodyClass = 'home' %}

{% extends "default/_layouts/site" %}

{% block navigation %}
{% include "_includes/global/navigation" %}
{% endblock %}

{% block main %}

<!-- Carousel -->
<div class="swiper-container" data-aos="fade-in" data-aos-delay="100">

  <div class="swiper-button-prev-test flex-container align-center-middle"></div>
  <div class="swiper-button-next-test flex-container align-center-middle"></div>

  <div class="swiper-wrapper">

    {% for matrixBlock in entry.images.all() %}
      {% switch matrixBlock.type %}
      {% case "images" %}
              {% for image in matrixBlock.images.all() %}
                <div class="swiper-slide">


                        {% switch image.aspectRatio %}
                          {% case "1-1" or "5-4" or "5-7" or "6-4" or "7-5" or "16-9" or "3-4" %}
                          <img class="max-viewheight-50 testing" data-interchange="{% include "_includes/images/contained/"~image.aspectRatio~"/interchange-img-small-12-medium-12" %}"></img>
                          {% default %}
                          <img class="max-viewheight-50 testing" data-interchange="{% include "_includes/images/contained/7-5/interchange-img-small-12-medium-12" %}"></img>
                        {% endswitch %}

                </div>
              {% endfor %}
      {% endswitch %}
    {% endfor %}

  </div>

</div>
<!-- End Carousel -->

{% endblock %}

{% block footer %}
{% include "_includes/global/footer" %}
{% endblock %}

